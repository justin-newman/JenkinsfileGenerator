@model JenkinsFileGenerator.Models.IndexViewModel
@using JenkinsFileGenerator.Models

@{
    ViewBag.Title = "Home Page";
}


<div class="createSection d-flex">
    <div class="info">
        <h2 class="m-3">Jenkinsfile Generator</h2>
        <i class="fab fa-jenkins fa-10x"></i>
        <p></p>
    </div>
    <form action="#" method="POST" class="createForm" name="createform">

@using (Html.BeginForm("index", "Home", FormMethod.Post, new { @class = "createForm"}))
{
            <div class="row p-3">


                <div class="col-7">
                        <h2 class="text-center">Project Information</h2>
                        <div id="repositoryType" class="form-group row justify-content-center m-3">
                                @Html.LabelFor(m => m.RepoType, new { @class = "col-sm-10 col-form-label text-justify" })
                                @Html.DropDownListFor(m => m.RepoType, Enum.GetValues(typeof(RepositoryType)).Cast<RepositoryType>().Select(x => new SelectListItem { Text = x.ToString(), Value = ((int)x).ToString() }), new { @class = "inputFields col-sm-9" })
                                <span class="">*</span>
                        </div>
                        <div id="agent" class="form-group row justify-content-center m-3">
                            @Html.LabelFor(m => m.agent, new { @class = "col-sm-10 col-form-label text-justify" })
                            @Html.TextBoxFor(m => m.agent, new { @class = "inputFields col-sm-9" })
                            <span class="formAsterix">*</span>
                            @Html.ValidationMessageFor(m => m.agent, "")
                        </div>
                        <div id="project" class="form-group row justify-content-center m-3">
                            <label class="col-sm-10 col-form-label text-justify">Project Name</label>
                            @Html.TextBoxFor(m => m.project, new { @class = "inputFields col-sm-9" })<span class="formAsterix">*</span>
                            @Html.ValidationMessageFor(m => m.project, "")
                        </div>
                        <div id="octopusProjectName" class="form-group row justify-content-center m-3">
                            @Html.LabelFor(m => m.OctopusProjectName, new { @class = "col-sm-10 col-form-label text-justify" })
                            @Html.TextBoxFor(m => m.OctopusProjectName, new { @class = "inputFields col-sm-9" })<span class="formAsterix">*</span>
                            @Html.ValidationMessageFor(m => m.OctopusProjectName, "")
                        </div>
                        <h2 class="text-center">File Information</h2>
                        <div id="jenkinsfileName" class="form-group row justify-content-center m-3">
                            <label class="col-sm-10 col-form-label text-justify">Filename</label>
                            @Html.TextBoxFor(m => m.jenkinsfileName, new { @class = "inputFields col-sm-9" })<span class="formAsterix">*</span>
                            @Html.ValidationMessageFor(m => m.jenkinsfileName, "")
                        </div>

                </div>

                <div class="col-5 d-flex flex-column justify-content-between">
                        <div class="">
                            <h2>Build Information</h2>
                            @Html.LabelFor(m => m.skipTests, new { @class = "col-sm-12 col-form-label" })
                            <label class="switch">
                                @Html.CheckBoxFor(m => m.skipTests)
                                <span class="slider round"></span>
                            </label>
                            <br />
                            <br />
                            @Html.LabelFor(m => m.automatedTests, new { @class = "col-sm-12 col-form-label" })
                            <label class="switch">
                                @Html.CheckBoxFor(m => m.automatedTests)
                                <span class="slider round"></span>
                            </label>
                        </div>
                        <button id="create-btn" class="m-3">Generate Jenkinsfile</button>
                </div>



            </div>

}
    </form>
</div>